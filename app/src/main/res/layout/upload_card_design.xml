<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Name"
            android:layout_marginLeft="20dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:id="@+id/upload_subject"/>
        <TextView
            android:id="@+id/upload_name"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Name"/>
        <TextView
            android:id="@+id/file"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/due_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/due_date"
                android:layout_toRightOf="@+id/due_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/3/2021"/>

        </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/browse"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="Browse"
        android:textAllCaps="true"
        android:background="@drawable/btn_round"
        android:layout_marginVertical="10dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="25dp"
        android:drawableStart="@drawable/broswe_icon"
        android:drawableTint="@color/black"/>
    <Button
        android:layout_toRightOf="@+id/browse"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:drawableTint="@color/black"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="UPLOAD"
        android:textAllCaps="true"
        android:background="@drawable/btn_round"
        android:layout_marginVertical="10dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="25dp"
        android:drawableStart="@drawable/upload_icon"/>


</RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>