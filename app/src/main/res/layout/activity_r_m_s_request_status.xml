<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RMSRequestStatus">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:onClick="callRMSREquest"
            android:id="@+id/RMS_back_icon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:tint="@color/black"
            android:src="@drawable/back_icon"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RMS Request Status"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/black"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appcolor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="8dp"
        >
        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Returning of books"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/description"
            android:layout_below="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/desctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject_name"
            android:layout_toRightOf="@+id/description"
            android:text="Due to covid-19 pandemic library got closed without prior notice.We could not return issued books.Today I received message to return bookd to avoid fine.
Noe I am in my hometoen so I cannot return book on due date. I request the library managment to increase due date and not to charge any fine till we come back to University"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remark"
            android:layout_below="@+id/desctext"
            android:text="Remark:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/remarktext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/remark"
            android:layout_below="@+id/desctext"
            android:text="Dear students due date of library books extended till 30 June 2020 and no fine will charged till the period of lockdown.You are also advised check UMS announcement regularly"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remarktext"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"/>
            <TextView
                android:id="@+id/datetext"
                android:layout_toRightOf="@id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/9/2020"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_toRightOf="@+id/datetext"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:05:33 PM"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>