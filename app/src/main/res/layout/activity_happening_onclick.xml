<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="40dp"
                android:tint="@color/black"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Happenings"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/descimage"
                android:layout_width="157dp"
                android:layout_height="152dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/descheader"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dumy Header"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/descimage"

                android:textColor="#1E1A1A"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/descdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dumy discription"
                android:layout_below="@+id/descheader"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                />
        </RelativeLayout>

    </ScrollView>


</LinearLayout>